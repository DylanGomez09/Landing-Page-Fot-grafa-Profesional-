}

const services: Service[] = [
    {
        title: "Sesiones de Fotos",
        description: "Ofrecemos sesiones de retratos para individuos y grupos, ideales para perfiles profesionales y personales.",
        imageSrc: "/img-portfolio/foto-4.webp",
        altText: "Persona posando para un retrato"
    },
    {
        title: "Cumpleaños",
        description: "Capturamos los momentos más importantes de tus eventos especiales con profesionalismo y creatividad.",
        imageSrc: "/img-portfolio/foto-8.webp",
        altText: "Cámara capturando un evento"
    },
    {
        title: "Fiesta de XV",
        description: "Inmortalizamos cada momento de esta celebración única, desde la preparación hasta el vals, capturando la magia de tus quince años.",
        imageSrc: "/img-portfolio/foto-5.webp",
        altText: "Persona posando para un retrato"
    },
    {
        title: "Bodas",
        description: "Capturamos cada detalle de tu día especial, desde la ceremonia hasta la recepción, creando recuerdos eternos de tu historia de amor.",
        imageSrc: "/img-portfolio/foto-2.webp",
        altText: "Producto fotografiado en estudio"
    },
    {
        title: "Bautismos",
        description: "Documentamos este sacramento especial con delicadeza y sensibilidad, preservando los momentos más emotivos de esta celebración religiosa.",
        imageSrc: "/img-portfolio/foto-12.webp",
        altText: "Personas en un evento corporativo"
    },
    {
