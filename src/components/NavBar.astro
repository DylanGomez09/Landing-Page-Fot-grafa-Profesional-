<nav class="bg-(--primary-color) p-4 flex justify-between items-center">
  <h5 class="font-bold text-xl">YF</h5>

  {/* Botón hamburguesa mobile */}
  <button
    id="menu-toggle"
    class="md:hidden flex flex-col gap-1.5 cursor-pointer"
    aria-label="Toggle menu"
  >
    <svg
      id="menu-icon"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      class="text-(--secondary-color) w-8 h-8 transition-all duration-300"
      viewBox="0 0 16 16"
    >
      <path
        fill-rule="evenodd"
        d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"
      ></path>
    </svg>
    <svg
      id="close-icon"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      class="hidden text-(--secondary-color) w-8 h-8 transition-all duration-300"
      viewBox="0 0 16 16"
    >
      <path
        d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"
      ></path>
    </svg>
  </button>

  {/* Menú desktop */}
  <ul class="hidden md:flex gap-4">
    <li><a href="#home" class="hover:opacity-80 transition">Inicio</a></li>
    <li>
      <a href="#portfolio" class="hover:opacity-80 transition">Portafolio</a>
    </li>
    <li>
      <a href="#services" class="hover:opacity-80 transition">Servicios</a>
    </li>
    <li>
      <a href="#contacto" class="hover:opacity-80 transition">Contacto</a>
    </li>
  </ul>

  {/* Menú mobile */}
  <ul
    id="mobile-menu"
    class="absolute top-16 left-0 right-0 bg-(--primary-color) flex flex-col gap-4 p-4 md:hidden transition-all duration-300 scale-y-0 origin-top opacity-0 pointer-events-none"
  >
    <li>
      <a href="#home" class="hover:opacity-80 transition block">Inicio</a>
    </li>
    <li>
      <a href="#portfolio" class="hover:opacity-80 transition block"
        >Portafolio</a
      >
    </li>
    <li>
      <a href="#services" class="hover:opacity-80 transition block">Servicios</a
      >
    </li>
    <li>
      <a href="#contacto" class="hover:opacity-80 transition block">Contacto</a>
    </li>
  </ul>
</nav>

<style>
  #mobile-menu {
    transition: all 300ms ease-in-out;
  }

  #mobile-menu.visible {
    opacity: 1;
    scale: 1;
    pointer-events: auto;
  }
</style>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuIcon = document.getElementById("menu-icon");
  const closeIcon = document.getElementById("close-icon");
  const navLinks = mobileMenu?.querySelectorAll("a");

  // Toggle menú
  menuToggle?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("visible");
    menuIcon?.classList.toggle("hidden");
    closeIcon?.classList.toggle("hidden");
  });

  // Cerrar menú al hacer clic en un enlace
  navLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.remove("visible");
      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
    });
  });
</script>
